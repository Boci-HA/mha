{
  "name": "Manus AI Assistant",
  "version": "1.0.0",
  "slug": "manus-ai-assistant",
  "description": "AI-powered Home Assistant control using Manus - enables natural language control of your smart home with advanced AI capabilities",
  "url": "https://github.com/Boci-HA/mha",
  "startup": "application",
  "boot": "auto",
  "arch": [
    "amd64",
    "armv7",
    "arm64"
  ],
  "ports": {
    "8123/tcp": {
      "description": "Manus Addon API Server"
    }
  },
  "environment": {
    "LOG_LEVEL": "info"
  },
  "options": {
    "manus_api_key": "your-api-key",
    "home_assistant_token": "your-token",
    "home_assistant_url": "http://localhost:8123",
    "enable_voice_control": true,
    "enable_automations": true,
    "enable_image_recognition": true,
    "log_level": "info"
  },
  "schema": {
    "manus_api_key": "str",
    "home_assistant_token": "str",
    "home_assistant_url": "str?",
    "enable_voice_control": "bool",
    "enable_automations": "bool",
    "enable_image_recognition": "bool",
    "log_level": "list(debug|info|warning|error)?"
  }
}
